{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Task",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/task/main.go",
            "args": [
                "--config",
                "${workspaceFolder}/configs/config.yaml"
            ],
            "showLog": true
        },
        {
            "name": "Debug Web Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/web/main.go",
            "args": [
                "--config",
                "${workspaceFolder}/configs/config.yaml"
            ],
            "showLog": true
        }
    ]
}