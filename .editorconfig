# EditorConfig 配置文件。
# 详细规范参考: http://editorconfig.org。

# root = true 表示这是最顶层的 EditorConfig 配置文件。

# EditorConfig 会自动在目录层级中向上查找，直到找到 root = true 的文件为止。
root = true

# [*] 表示以下配置适用于所有文件。
[*]
# 文件编码格式为 UTF-8。
charset = utf-8
# 自动删除行尾空白字符。
trim_trailing_whitespace = true
# 文件末尾自动插入一个空行。
insert_final_newline = true
# 换行符使用 Unix 风格的 LF（\n）。
end_of_line = lf

# [*.go] 表示以下配置适用于所有 .go 后缀的文件。
[*.go]
# Go 文件使用 4 个空格进行缩进。
indent_size = 4

# [*.{html,js,ts}] 表示以下配置适用于所有 .html、.js 和 .ts 后缀的文件。
[*.{html,js,ts}]
# HTML、JavaScript 和 TypeScript 文件使用 2 个空格进行缩进。
indent_size = 2

# [*.md] 表示以下配置适用于所有 .md 后缀的 Markdown 文件。
[*.md]
# Markdown 文件保留行尾空白字符，因为在 Markdown 中，行尾两个空格表示换行。
trim_trailing_whitespace = false

# [Makefile] 表示以下配置适用于所有名为 Makefile 的文件。
[Makefile]
# Makefile 文件必须使用 Tab 进行缩进，这是 Make 的语法要求。
indent_style = tab